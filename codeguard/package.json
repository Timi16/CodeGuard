{
  "name": "codeguard",
  "displayName": "CodeGuard",
  "description": "The Web Framework Security Scanner is a powerful and advanced security tool designed for developers working with various web frameworks across multiple programming languages. This extension integrates static analysis tools to automatically detect and report common security vulnerabilities within your codebase. It supports popular web frameworks like Django and Flask for Python, Express.js and React for JavaScript, Spring and Play for Java, Gin and Echo for Go, and Ruby on Rails.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeguard.analyzeSecrets",
    "onCommand:codeguard.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeguard.analyzeSecrets",
        "title": "Analyze Code for Secrets"
      },
      {
        "command": "codeguard.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CodeGuard Configuration",
      "properties": {
        "secretAnalyzer.secretPatterns": {
          "type": "array",
          "default": [
            "API_KEY",
            "SECRET_KEY",
            "password",
            "token",
            "AWS_SECRET_ACCESS_KEY",
            "JWT_SECRET"
          ],
          "description": "List of secret patterns to detect in code files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
